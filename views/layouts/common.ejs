        <a class="item" href="/Contact">
            Report & Contact
        </a>
        <a class="right item moon" id="toggle" style="margin: auto 1rem auto 1rem;">
            <i class="fa fa-moon"></i>
        </a>
    </div>

    <%- body %>

        <div style="display:flex;">
            <div class="ui segment no-border" id="credit">
